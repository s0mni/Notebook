@page
@model Notebook.Pages.Categories.CreateModel
@{
}

<h2>Create</h2>

<div class="container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4 text-center">
                <label asp-for="Category.Title"></label>
            </div>
            <div class="col-4">
                <input asp-for="Category.Title" class="form-control" />
            </div>
            <span asp-validation-for="Category.Title" class="text-danger"></span>
        </div>
        <div class="form-group row mt-4">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-outline-secondary">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}